<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLinear"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/close_button_edit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/close" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="User Information"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- First Name -->
    <EditText
        android:id="@+id/textFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:hint="First Name"
        android:inputType="none" />

    <!-- Last Name -->
    <EditText
        android:id="@+id/textLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Last Name"
        android:inputType="none" />

    <!-- Email -->
    <EditText
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Email"
        android:inputType="none" />

    <!-- Phone -->
    <EditText
        android:id="@+id/textPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Phone"
        android:inputType="none" />

    <!-- Date of Birth -->
    <EditText
        android:id="@+id/textDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Date of Birth"
        android:inputType="none" />

    <!-- Gender -->
    <EditText
        android:id="@+id/textGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Gender"
        android:inputType="none" />

    <!-- User Name -->
    <EditText
        android:id="@+id/textUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="User Name"
        android:inputType="none" />

    <!-- Occupation -->
    <EditText
        android:id="@+id/textOccupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Occupation"
        android:inputType="none" />

    <!-- Work Place -->
    <EditText
        android:id="@+id/textWorkPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Work Place"
        android:inputType="none" />

    <!-- Education Level -->
    <EditText
        android:id="@+id/textEducationLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Education Level"
        android:inputType="none" />

    <!-- School -->
    <EditText
        android:id="@+id/textSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="School"
        android:inputType="none" />

    <!-- Date of Joining -->
    <EditText
        android:id="@+id/textDateOfJoining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Date of Joining"
        android:inputType="none" />

    <!-- Relationship Status -->
    <EditText
        android:id="@+id/textRelationshipStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Relationship Status"
        android:inputType="none" />

    <!-- Location -->
    <EditText
        android:id="@+id/textLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:hint="Location"
        android:inputType="none" />
</LinearLayout>
