<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    tools:context=".Profile.ProfileFragment">

    <!--- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="310dp"
            android:layout_height="35dp"
            android:text="JustXoai"
            android:textColor="@color/black"
            android:paddingLeft="140dp"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/light_grey"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/edit_profile_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/edit"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="7dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/light_grey"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/home_search_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/social_media"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--- Ava -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="2dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@drawable/background_profile"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="380dp"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/cam"
                                android:layout_margin="5dp"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="100dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="50dp"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/avatar_profile"
                                android:layout_margin="5dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="76dp"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/cam"
                                android:layout_margin="5dp"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

            <!--- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="JustXoai"
                    android:paddingLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="match_parent"
                        android:text="xxx"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="friends"
                        android:textSize="10sp"
                        android:textColor="#a8a5a5"
                        android:paddingTop="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    >

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/w_n"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/play_button"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="3dp"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="310dp"
                        android:layout_height="match_parent"
                        android:text="3107\nW/n, Nau"
                        android:layout_marginLeft="3dp"
                        android:paddingLeft="10dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/setting_dot"
                        android:layout_margin="12dp"/>

                </LinearLayout>

            </LinearLayout>

            <!--- Edit Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/blue"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text=" + Add to story"
                        android:gravity="center"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_profile"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_grey"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Edit profile"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardBackgroundColor="@color/light_grey"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/setting_dot" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!--- Picture -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_cyan"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Posts"
                        android:textSize="16.5sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/dark_cyan"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Photos"
                    android:textSize="16.5sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Videos"
                    android:textSize="16.5sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!--- Detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Details"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/setting_dot"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="See your About info"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <!--- Edit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginBottom="1dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_public_details"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_cyan"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Edit public details"
                        android:gravity="center"
                        android:textColor="@color/blue"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--- Friends -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="Friends"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:id="@+id/find_friend"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Find Friends"
                        android:gravity="right|center"
                        android:textSize="10sp"
                        android:textColor="@color/blue"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="xxx friends"
                    android:paddingLeft="15dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/friend0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:background="@color/light_grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="User"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/friend1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:background="@color/light_grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="User"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/friend2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:background="@color/light_grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="User"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/friend3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:background="@color/light_grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="User"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/friend4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:background="@color/light_grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="User"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:id="@+id/friend5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:background="@color/light_grey"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="User"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/friends"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="See all friends"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="Your posts"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Filters"
                    android:gravity="right|center"
                    android:textSize="10sp"
                    android:textColor="@color/blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="2.5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/avatar_profile"
                    android:paddingLeft="10dp"/>

                <LinearLayout
                    android:id="@+id/create_post"
                    android:layout_width="300dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="What's on your mind?"
                        android:textSize="16.5sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>


                <ImageButton
                    android:id="@+id/image_profile_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/photos"/>
            </LinearLayout>

            <!--- Posts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Manage posts"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--- RecyclerView -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>