<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Video_Search_Activity"
    android:background="#ccc"
    android:orientation="vertical">

    <!--- Search Videos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="20dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back_arrow"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#e2e5ea"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Search videos"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--- Videos recently -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Videos you've watched"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="See all"
            android:gravity="right|center"
            android:textSize="14sp"
            android:textColor="#0866ff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Recent searches in Video"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="See all"
            android:gravity="right|center"
            android:textSize="14sp"
            android:textColor="#0866ff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="#e4e6eb"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hot"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Content"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Popular now"
                        android:gravity="center|left"
                        android:paddingLeft="3dp"
                        android:textSize="10sp"
                        android:textColor="#646668"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/setting_dot"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="#e4e6eb"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hot"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Content"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Popular now"
                        android:gravity="center|left"
                        android:paddingLeft="3dp"
                        android:textSize="10sp"
                        android:textColor="#646668"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/setting_dot"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="#e4e6eb"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hot"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Content"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Popular now"
                        android:gravity="center|left"
                        android:paddingLeft="3dp"
                        android:textSize="10sp"
                        android:textColor="#646668"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/setting_dot"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>