<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    tools:context=".More.Edit_Profile_Activity">

    <!--- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back_arrow"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>

    <!--- Profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Profile picture"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Edit"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="50dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/avatar_profile"/>

        </androidx.cardview.widget.CardView>
        
    </LinearLayout>
    
    <!--- Avatar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Avatar"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="50dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/avatar_profile"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--- Cover Photo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Cover photo"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Edit"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_profile"/>

        </androidx.cardview.widget.CardView>
        
    </LinearLayout>

    <!--- Bio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Bio"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Add"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Describe yourself..."
            android:gravity="center"
            android:paddingBottom="3dp"/>

    </LinearLayout>

    <!--- Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Details"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Edit"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/address"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:text="Lives in ...., VietNam"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/suitcase"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:text="Workplace"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/education"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:text="Education"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/locate"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/love"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:text="Relationship Status"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"/>

        </LinearLayout>


    </LinearLayout>

    <!--- Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Links"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Add"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <!--- Edit about -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/avatar"
                android:layout_gravity="center|left"
                android:layout_marginLeft="105dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Edit your About info"
                android:textColor="@color/blue" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:text="Hometown" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>