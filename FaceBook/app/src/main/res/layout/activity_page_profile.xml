<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    tools:context=".Page.Page_Profile_Activity">

    <!--- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back_arrow"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="310dp"
            android:layout_height="35dp"
            android:text="Page"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/page_search_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/social_media"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--- Ava -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@color/light_grey"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="100dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="50dp"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/user"
                                android:layout_margin="5dp"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

            <!--- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Page"
                    android:paddingLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

            </LinearLayout>

            <!--- Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp"
                android:padding="5dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/messenger"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textColor="@color/white"
                            android:padding="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/light_grey"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/like_page"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liked"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:cardBackgroundColor="@color/light_grey"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/setting_dot" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!--- Picture -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_cyan"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Posts"
                        android:textSize="16.5sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/dark_cyan"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Photos"
                    android:textSize="16.5sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Videos"
                    android:textSize="16.5sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!--- Detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Details"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/info"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Page information"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/page_about"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/setting_dot"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="See page About info"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <!--- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="Your posts"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Filters"
                    android:gravity="right|center"
                    android:textSize="10sp"
                    android:textColor="@color/blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="2.5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/user"
                    android:paddingLeft="10dp"/>

                <LinearLayout
                    android:id="@+id/create_post"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="What's on your mind?"
                        android:textSize="16.5sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!--- Posts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Manage posts"
                        android:gravity="center"
                        android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewpagepost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </androidx.core.widget.NestedScrollView>

            <!--- Avatar Change -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/user"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="5dp"/>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="Page updated his profile picture"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:text="1h ."/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/global"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/setting_dot"
                        android:layout_gravity="center"/>

                    <ImageButton
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:background="@drawable/close"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="120dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/user"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        app:cardBackgroundColor="#197bff"
                        app:cardCornerRadius="20dp">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/like_fb"
                            android:scaleType="centerInside"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        app:cardBackgroundColor="#fd444c"
                        app:cardCornerRadius="20dp">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/heart"
                            android:padding="8dp"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#f9aa4b"
                        app:cardCornerRadius="20dp">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/haha"
                            android:padding="8dp"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:gravity="center_vertical"
                        android:text="1.2k"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="196dp"
                        android:layout_height="40dp"
                        android:paddingTop="10dp"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="1k comments  900 shares"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="6dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/like"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingLeft="-5dp"
                            android:textSize="15sp"
                            android:text="Like"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginRight="6dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/comment"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingLeft="1dp"
                            android:textSize="15sp"
                            android:text="Comment"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/chat"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingLeft="-5dp"
                            android:textSize="15sp"
                            android:text="Send"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/share"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingLeft="-5dp"
                            android:textSize="15sp"
                            android:text="Share"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>