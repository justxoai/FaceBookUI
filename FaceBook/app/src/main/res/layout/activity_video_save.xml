<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Video_Save_Activity"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back_arrow"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="375dp"
            android:layout_height="match_parent"
            android:text="You"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"/>

    </LinearLayout>

    <!--- More -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:layout_marginLeft="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="20dp">

              <ImageButton
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/saved_videos"
                  android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:text="Saved videos"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="#000000"/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:layout_marginLeft="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="20dp">

              <ImageButton
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/history"
                  android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:text="History"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="#000000"/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:layout_marginLeft="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="20dp">

              <ImageButton
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/data"
                  android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:text="Cellular data use"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="#000000"/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:layout_marginLeft="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#ccc"
                app:cardCornerRadius="20dp">

              <ImageButton
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/bell2"
                  android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:text="Notifications"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="#000000"/>

          </LinearLayout>

        </LinearLayout>

      </LinearLayout>


    </LinearLayout>

</LinearLayout>