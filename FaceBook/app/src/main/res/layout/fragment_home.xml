<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/dark_grey"
    android:id="@+id/fragment_home"
    tools:context=".Home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:text="facebook"
                android:textColor="@color/blue"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/file"
                        android:layout_margin="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/home_search_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/social_media"
                        android:layout_margin="5dp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/chat_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/chat"
                        android:layout_margin="5dp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!--- Status -->
        <LinearLayout
            android:id="@+id/createPost"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="2.5dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/avatar_profile"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:text="What's on your mind?"
                android:textSize="16.5sp"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/image_home_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/photos"/>
        </LinearLayout>

        <!--- Story -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                android:background="@drawable/avatar_profile"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingTop="20dp"
                                android:text="Create\nStory"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="15sp"/>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="20dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_plus"
                                android:layout_margin="10dp"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/reel_34">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Henry"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/man_bench"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/mountains">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="Julia"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"/>

                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/girl_train"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/reel_24">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="Adam"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"/>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/johnny"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/reel_20">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="At"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"/>

                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/at_avata"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/lights">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="Laura"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"/>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/avatar_g"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/nature">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="Charlotte"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"/>

                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/me2"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ocean">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:text="Victoria"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"/>

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/closegirl"/>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <!--- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="2dp"/>


    </LinearLayout>

</ScrollView>