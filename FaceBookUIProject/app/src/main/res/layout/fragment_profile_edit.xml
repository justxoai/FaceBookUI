<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    tools:context=".profile.fragment.ProfileEditFragment">

    <!--TODO: implement as Button-->
    <!--TODO: convert icon to white-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal"
        android:background="@drawable/profile_edit_btn"
        android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_edit_img">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="35dp"
            android:layout_centerInParent="true"
            android:text="@string/profile_edit"
            android:textSize="17sp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/profile_more_btn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="12dp"
            android:text="@string/profile_more"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </FrameLayout>

</LinearLayout>